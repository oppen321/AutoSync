name: Sync Repository

on:
  schedule:
    - cron: '0 * * * *'  # 每小时同步一次

jobs:
  sync:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout target repo
        uses: actions/checkout@v2
        with:
          repository: oppen321/build-OpenWrt
          token: ${{ secrets.GITHUB_TOKEN }}
          path: target-repo

      - name: Checkout source repo
        uses: actions/checkout@v2
        with:
          repository: sbwml/r4s_build_script
          token: ${{ secrets.GITHUB_TOKEN }}
          path: source-repo

      - name: Sync files
        run: |
          rsync -av --delete source-repo/ target-repo/
          
      - name: Commit and push changes
        run: |
          cd target-repo
          git config user.name "GitHub Action"
          git config user.email "action@github.com"
          git add .
          git commit -m "Sync from sbwml/r4s_build_script" || echo "No changes to commit"
          git push origin main  # 请确认你的默认分支名称
